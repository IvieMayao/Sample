<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/questions.css">
    <style>
        .submit-button {
            display: none; /* Hide by default */
        }
        
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1; /* This makes the content area take up the remaining space */
        }

        footer {
            background-color: rgb(15, 13, 13);
            color: orange; 
            text-align: center;
            padding: 10px 0;
            position: relative;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Include Navigation Code -->
    <%- include('include/nav.ejs') %>

    <div class="container mt-5">
        <h1>Mythology Quiz Questions</h1>
        
        <form id="quizForm" action="questions/results" method="POST">
            <div id="quizCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% questions.forEach((question, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <div class="question-card">
                                <h5>Question <%- index + 1 %>: <%- question.question %></h5>
                                <div class="form-check-group">
                                    <% question.all_answers.forEach((answer, answerIndex) => { %>
                                        <div class="form-check">
                                            <input 
                                                type="radio" 
                                                id="question-<%= index %>-answer-<%= answerIndex %>" 
                                                name="question-<%= index %>" 
                                                value="<%= answer %>" 
                                                class="form-check-input" 
                                                required 
                                            >
                                            <label for="question-<%= index %>-answer-<%= answerIndex %>" class="form-check-label">
                                                <%= answer %>
                                            </label>
                                        </div>
                                    <% }) %>
                                </div>
                                <!-- Hidden field to store the correct answer for this question -->
                                <input type="hidden" name="correct-answer-<%= index %>" value="<%= question.correct_answer %>">
                            </div>
                        </div>
                    <% }) %>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <button type="button" class="btn btn-secondary" onclick="$('#quizCarousel').carousel('prev'); checkSubmitButton();">Previous</button>
                    <button type="button" class="btn btn-secondary" onclick="$('#quizCarousel').carousel('next'); checkSubmitButton();">Next</button>
                    <button type="submit" class="btn btn-primary submit-button" id="submit">Submit Answers</button>
                </div>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function checkSubmitButton() {
            const totalItems = $('.carousel-item').length;
            const currentIndex = $('.carousel-item.active').index();
            const submitButton = $('.submit-button');

            // Show the button only if the current index is the last item
            if (currentIndex === totalItems - 1) {
                submitButton.show();
            } else {
                submitButton.hide();
            }
        }

        // Call the function initially to set the button visibility
        $(document).ready(function() {
            checkSubmitButton();
        });
    </script>

    <!-- Footer Section -->
    <footer class="text-center ">
        <div class="text-center">
            Â© 2024 Copyright:
            <a class="text-light" href="/landing">Greek Mythology</a>
        </div>
    </footer>

</body>
</html>
